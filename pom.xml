	<prerequisites>
		<maven>3.0.4</maven>
	</prerequisites>

	<scm>
		<connection>scm:git:git://github.com/stefanbirkner/system-rules.git</connection>
		<developerConnection>scm:git:git@github.com:stefanbirkner/system-rules.git</developerConnection>
